- const __time = locals.systemVersion || "";

doctype html
html(lang="en")
  head
    meta(charset="utf8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width,initial-scale=1")
    title #{title}
    link(href= static + "css/portal/bootstrap.min.css" rel="stylesheet")
    link(href= static + "css/portal/header.css?time=" + __time rel="stylesheet")
    link(href= static + "css/portal/footer.css?time=" + __time rel="stylesheet")

- const _navbar = locals.navbar || [{href: "/portal/home", name: "首页"}];
- let _actionNumer = locals.index || 0;
- _actionNumer-- < 0? _actionNumer=0: null;

  style.
    @media (min-width:769px) {
      .dropdown-menu {padding: 0 0 0 0;}
      .dropdown-menu>li>a {padding: 8px; font-size: 15px; text-align: center; line-height: 35px; height: 50px;}
      .dropdown-menu>li>a:focus, .dropdown-menu>li>a:hover {color: #3d9bff;}
    }

    @media (max-width:768px) {
      .dropdown-menu>li>a {display:none;}
      .dropdown-menu {height: 0; width: 0; min-height: 0; min-width: 0; border: none;}
    }


  body(oncontextmenu="javascript:return false;")
    header
      div(class="header-body")
        nav(class="header-navbar navbar navbar-default navbar-fixed-top" role="navigation")
          div(class="container header-container-fluid")
            button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#cynomy-portal-collapse")
              span(class="sr-only") 切换导航
              span(class="icon-bar")
              span(class="icon-bar")
              span(class="icon-bar")
            div(class="navbar-header  header-navbar-header" onClick="javascript:location.href='/';")
              a(class="navbar-brand" href="/")
            div
              ul(class="nav navbar-nav navbar-left collapse navbar-collapse" aria-expanded="false" id="cynomy-portal-collapse")
                each nav,index in _navbar
                  li(class=index ===_actionNumer ? "active":"")
                    a(href= nav.href)= nav.name
                    if nav.subNav
                      ul(class="dropdown-menu")
                          each subNav in nav.subNav
                            li
                              a(href=subNav.href)=subNav.name
              form(class="navbar-form navbar-right header-search" role="search")
                div(class="input-group")
//-                  input(type="search" class="form-control nav-search" placeholder="输入查找关键字")
                  span(class="input-group-addon btn header-searchIcon")
