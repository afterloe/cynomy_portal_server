- const __time = locals.systemVersion || "";

doctype html
html(lang="en")
  head
    meta(charset="utf8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width,initial-scale=1")
    title #{title}
    link(href= static + "css/portal/bootstrap.min.css" rel="stylesheet")
    link(href= static + "css/portal/header.css?time=" + __time rel="stylesheet")
    link(href= static + "css/portal/footer.css?time=" + __time rel="stylesheet")
    style.
      .navbar-header{background: url('http://almcloud.jwis.cn/images/portal/titleLogo.png') no-repeat center;background-size: contain;}

- const navbar = [{href: "/portal/home", name: "首页"}, {href: "/portal/platform", name: "R&D"}, {href: "/portal/product", name: "自主交付部"}, {href: "/portal/directory", name: "售前"}]
- if (locals.index && locals.index <= navbar.length) {
-   navbar[index - 1].isAction = "active";
- }

  body(oncontextmenu="javascript:return false;")
    header
      div(class="header-body")
        nav(class="header-navbar navbar navbar-default navbar-fixed-top" role="navigation")
          div(class="container header-container-fluid")
            button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#example-navbar-collapse")
              span(class="sr-only") 切换导航
              span(class="icon-bar")
              span(class="icon-bar")
              span(class="icon-bar")
            div(class="navbar-header  header-navbar-header")
              a(class="navbar-brand" href="#")
            div
              ul(class="nav navbar-nav navbar-left collapse navbar-collapse" aria-expanded = "false" id="example-navbar-collapse")
                each nav in navbar
                  li(class=nav.isAction)
                    a(href= nav.href)= nav.name
              form(class="navbar-form navbar-right header-search" role="search")
                div(class="input-group")
                  input(type="search" class="form-control nav-search" placeholder="输入查找关键字")
                  span(class="input-group-addon btn header-searchIcon")
